@model Athenathon_Webseite.Models.Newsfeed

<form method="post" asp-action="DeletePost">
    <input asp-for="NewsId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete News</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <!--Naming and Spacing of the tables columns.-->
                    <div class="col-3">
                        Date
                    </div>
                    <div class="col-3">
                        Title
                    </div>
                    <div class="col-3">
                        Text
                    </div>
                    <div class="col-3">
                        Author
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Time" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Title" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Text" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Author" disabled class="form-control" />
                    </div>
                </div>
                <!--Design of Buttons-->
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{<partial name="_ValidationScriptsPartial" />}
}