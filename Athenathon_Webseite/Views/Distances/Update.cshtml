@model Athenathon_Webseite.Models.UserDistance

<form method="post" asp-action="Update">
    <input asp-for="DistanceId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">

                    <div class="col-3">
                        Distance [Km]
                    </div>
                    <div class="col-3">
                        Sport Type
                    </div>
                    <div class="col-3">
                        Time of day [hh:mm]
                    </div>
                    <div class="col-3">
                        Duration [min]
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-3">
                            <input asp-for="Distance" class="form-control"/>
                    </div>
                    <div class="col-3">
                        <select asp-for="TypeOfSport" class="form-control">
                            <option selected disabled>Select Type of Sport</option>
                            <option>Jogging</option>
                            <option>Running</option>
                            <option>Walking</option>
                            <option>Swimming</option>
                            <option>Riding Bike</option>
                            <option>Riding Horse</option>
                            <option>Hiking</option>
                            <option>Skiing</option>
                            <option>Paddling</option>
                            <option>Golf</option>
                            <option>Tennis</option>
                            <option>Football</option>
                            <option>Basketball</option>
                            <option>Volleyball</option>
                            <option>Badminton</option>
                            <option>else</option>
                        </select>
                    </div>
                    <div class="col-3">
                        <input asp-for="DayTime" class="form-control" />
                        <span asp-validation-for="DayTime" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Duration" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                   
                    <div class="col-3">
                        Average Speed [Km/h]
                    </div>
                    <div class="col-3">
                        Burned Calories [Kcal]
                    </div>
                </div>
                <div class="form-group row">
                    
                    <div class="col-3">
                        <input asp-for="AverageSpeed" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="CaloriesBurned" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}