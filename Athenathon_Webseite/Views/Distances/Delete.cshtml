@model Athenathon_Webseite.Models.UserDistance

<form method="post" asp-action="DeletePost">
    <input asp-for="DistanceId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Distance</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        Distance
                    </div>
                    <div class="col-4">
                        Sport Type
                    </div>
                    <div class="col-4">
                        Time of day
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Distance" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="TypeOfSport" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="DayTime" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        Duration
                    </div>
                    <div class="col-4">
                        Average Speed
                    </div>
                    <div class="col-4">
                        Burned Calories
                    </div>
                </div>
                <div class="form-group row">
                        <div class="col-4">
                            <input asp-for="Duration" disabled class="form-control" />
                        </div>
                        <div class="col-4">
                            <input asp-for="AverageSpeed" disabled class="form-control" />
                        </div>
                        <div class="col-4">
                            <input asp-for="CaloriesBurned" disabled class="form-control" />
                        </div>
                 </div>

                
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
