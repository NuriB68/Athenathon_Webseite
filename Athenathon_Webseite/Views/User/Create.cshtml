@model Athenathon_Webseite.Models.User

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add User</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <!--Naming and Spacing of the tables columns.-->
                <div class="form-group row">
                    <div class="col-3">
                        Email
                    </div>
                    <div class="col-3">
                        University
                    </div>
                    <div class="col-3">
                        Name
                    </div>
                    <div class="col-3">
                        Password
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <!--Select function used to get intended input.(University affiliation)-->
                        <select asp-for="University" class="form-control">
                            <option selected disabled>Select University</option>
                            <option>Crete</option>
                            <option>Maribor</option>
                            <option>Orleans</option>
                            <option>Porto</option>
                            <option>Rome</option>
                            <option>Siegen</option>
                            <option>Vilnius</option>
                        </select>
                    </div>
                    <div class="col-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Password" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        Role
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-3">
                        <select asp-for="Roles" class="form-control">
                            <option selected disabled>Select Role</option>
                            <option>User</option>
                            <option>Supervisor</option>
                        </select>
                        <span asp-validation-for="Roles" class="text-danger"></span>

                    </div>
                </div>
                <!--Design of Buttons-->
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Add" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />}
}