@model Athenathon_Webseite.Models.User

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update User</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        Email
                    </div>
                    <div class="col-3">
                        University
                    </div>
                    <div class="col-3">
                        Name
                    </div>
                    <div class="col-3">
                        Password
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select asp-for="University">
                            <option selected disabled>Select University</option>
                            <option>Crete</option>
                            <option>Maribor</option>
                            <option>Orleans</option>
                            <option>Porto</option>
                            <option>Rome</option>
                            <option>Siegen</option>
                            <option>Vilnius</option>
                        </select>
                    </div>
                    <div class="col-3">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Password" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
                        <partial name="_ValidationScriptsPartial" /> }
}